{
    "require": {
        "psr/container":        "^1.0",
        "psr/event-dispatcher": "^1.0",
        "psr/log":              "^1.1",
        "opis/closure":         "^3.6.x-dev",
        "twig/twig":            "^2.8 || ^3.1"
    },

        "require-dev": {
            "squizlabs/php_codesniffer": "*",
            "phpunit/phpunit":           "*",
            "filp/whoops":               "*",
            "phploc/phploc":             "*",
            "pdepend/pdepend":           "*",
            "phpmd/phpmd":               "*",
            "sebastian/phpcpd":          "*",
            "phpmetrics/phpmetrics":     "*",
            "friendsofphp/php-cs-fixer": "*",
            "ovr/phpsa":                 "*",
            "phpbench/phpbench":         "*",
            "edgedesign/phpqa":          "*",
            "symfony/var-dumper":        "*",
            "slashtrace/slashtrace":     "*",
            "maximebf/debugbar":         "*",
            "tracy/tracy": "*",
            "fzaninotto/faker":          "*",
            "phpstan/phpstan":           "*"
        },
        "prefer-stable": true,
        "minimum-stability": "dev",
    
    "autoload": {
        "psr-4": {
            "Oxylion\\Component\\": "libs/oxylion/oxylion/src/Oxylion/Component/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Oxylion\\Component\\": "libs/oxylion/oxylion/test/Oxylion/Component/"
        }
    }
}