; top-most EditorConfig file
root = true

; Unix-style newlines
# noinspection EditorConfigPartialOverride
[*]
indent_style              = space
indent_size               = 2
end_of_line               = lf
charset                   = utf-8
trim_trailing_whitespace  = false
insert_final_newline      = false

[*.php]
indent_size = 4

[*.json]
indent_size = 4

[*.md]
trim_trailing_whitespace  = false

[*.xml]
indent_size = 4

[*.yml]
indent_size = 4

[*.yaml]
indent_size = 4